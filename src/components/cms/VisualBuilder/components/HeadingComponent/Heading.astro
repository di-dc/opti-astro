---
import {
    DisplaySettingsFragment,
    HeadingComponentFragment,
} from '../../../../../services/graphql/__generated/sdk';
import { getHeadingComponentStyles } from './HeadingStyling';
import { ContentPayload } from '../../../../../services/shared/ContentPayload';
export interface Props {
    data: HeadingComponentFragment;
    contentPayload: ContentPayload;
    displaySettings: DisplaySettingsFragment[];
}
const { data, displaySettings } = Astro.props as Props;
---

<div class:list={getHeadingComponentStyles(displaySettings)}>
    {data.headingText}
</div>
