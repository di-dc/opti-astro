---
import {
    ContactComponentFragment,
    ContactPage,
    DisplaySettingsFragment,
    Locales,
} from '../../../../../services/graphql/__generated/sdk';
import { getOptimizelySdk } from '../../../../../services/graphql/getSdk';
import { ContentPayload } from '../../../../../services/shared/ContentPayload';
export interface Props {
    data: ContactComponentFragment;
    displaySettings: DisplaySettingsFragment[];
    contentPayload: ContentPayload;
}
const { data, contentPayload } = Astro.props as Props;

const optiResponse = await getOptimizelySdk(contentPayload).pageById({
    key: data.Contact.key,
    loc: Locales.En,
});
const contactPage = optiResponse._Page.items[0] as ContactPage;
---

{
    contactPage.Name && (
        <div class="m-4">
            <a
                href="#"
                class="relative block overflow-hidden rounded-lg p-4 sm:p-6 lg:p-8"
            >
                <span class="absolute inset-x-0 bottom-0 h-2 bg-gradient-to-r from-green-300 via-blue-500 to-purple-600" />

                <div class="sm:flex sm:justify-between sm:gap-4">
                    <div>
                        <h3 class="text-lg font-bold text-gray-900 sm:text-xl">
                            {contactPage.Name}
                        </h3>

                        <p class="mt-1 text-xs font-medium text-gray-600">
                            {contactPage.Designation}
                        </p>
                    </div>

                    <div class="hidden sm:block sm:shrink-0">
                        <img
                            alt=""
                            src={contactPage.Image?.url.default}
                            class="size-32 rounded-lg object-cover shadow-sm"
                        />
                        <a
                            class="mt-4 inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:ring focus:outline-none active:text-indigo-500"
                            href="#"
                        >
                            {contactPage.Email}
                        </a>
                    </div>
                </div>

                <div class="mt-4">
                    <p class="text-sm text-pretty text-gray-500">
                        üìç {contactPage.Location}
                    </p>
                </div>

                <div class="mt-4">
                    <p class="text-sm text-pretty text-gray-500">
                        {contactPage.Phone}
                    </p>
                </div>
            </a>
        </div>
    )
}
